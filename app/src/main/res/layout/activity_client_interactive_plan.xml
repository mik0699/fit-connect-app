<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClientInteractivePlanActivity">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/client_interactive_plan_nav_view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:headerLayout="@layout/nav_header"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/client_interactive_plan_nav_view"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/tv_ex_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Titolo esercizio"
                android:textSize="30sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                />

            <Button
                android:id="@+id/btn_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_ex_name"
                app:layout_constraintStart_toStartOf="@id/tv_ex_name"
                app:layout_constraintEnd_toEndOf="@id/tv_ex_name"
                android:text="Informazioni esercizio"
                android:backgroundTint="@color/secondary_btn"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                />

            <LinearLayout
                android:id="@+id/ll_1"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/btn_info"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                >
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="25"
                    android:text="Set"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="25"
                    android:text="Reps"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="25"
                    android:text="Peso"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="25"
                    android:text="Riposo"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_2"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_1"
                android:orientation="horizontal"
                android:weightSum="100"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/ll_1"
                app:layout_constraintStart_toStartOf="@id/ll_1"
                app:layout_constraintEnd_toEndOf="@id/ll_1"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                >
                <TextView
                    android:id="@+id/tv_set"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="25"
                    android:text="3"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    />
                <TextView
                    android:id="@+id/tv_reps"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="25"
                    android:text="5"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    />
                <TextView
                    android:id="@+id/tv_weight"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="25"
                    android:text="10kg"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    />
                <TextView
                    android:id="@+id/tv_rest"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="25"
                    android:text="1:00"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    />
            </LinearLayout>

            <Button
                android:id="@+id/btn_timer"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="Avvia\nRest Timer"
                app:layout_constraintTop_toBottomOf="@id/ll_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tv_timer"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/secondary_btn"
                android:textColor="@color/black"
                android:drawableEnd="@drawable/baseline_timer_24"
                />

            <TextView
                android:id="@+id/tv_timer"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginTop="28dp"
                android:gravity="center"
                android:text="00:00"
                android:textSize="40sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/btn_timer"
                app:layout_constraintTop_toBottomOf="@id/ll_2"
                />

            <TextView
                android:id="@+id/tv_diff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_timer"
                android:text="DifficoltÃ  percepita"
                android:textSize="18sp"
                android:layout_marginTop="25dp"
                />

            <RatingBar
                android:id="@+id/rb_diff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.RatingBar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_diff"
                android:stepSize="1"
                android:rating="1"
                android:progressTint="@color/header"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ti_note"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/rb_diff"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"
                android:hint="Note"
                style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox.Dense"
                android:theme="@style/ThemeOverlay.AppTheme.TextInputEditText.Outlined"
                >

                <EditText
                    android:id="@+id/et_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="100dp"
                    android:gravity="start"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btn_next"
                android:layout_width="160dp"
                android:layout_height="70dp"
                android:text="Successivo"
                app:layout_constraintStart_toEndOf="@id/btn_back"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/pb_ex"
                app:layout_constraintTop_toBottomOf="@id/ti_note"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/primary_btn"
                android:textSize="18sp"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="10dp"
                />

            <Button
                android:id="@+id/btn_back"
                android:layout_width="160dp"
                android:layout_height="70dp"
                android:text="Precedente"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btn_next"
                app:layout_constraintBottom_toTopOf="@id/pb_ex"
                app:layout_constraintTop_toBottomOf="@id/ti_note"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/primary_btn"
                android:textSize="18sp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="10dp"
                />

            <ProgressBar
                android:id="@+id/pb_ex"
                android:layout_width="250dp"
                android:layout_height="30dp"
                style="?android:attr/progressBarStyleHorizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tv_progress"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="30dp"
                android:max="10"
                android:progress="5"
                android:progressTint="@color/header"
                android:layout_marginBottom="10dp"
                />

            <TextView
                android:id="@+id/tv_progress"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/pb_ex"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="5/10"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="10dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</RelativeLayout>
