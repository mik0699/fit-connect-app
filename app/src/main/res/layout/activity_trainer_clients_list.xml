<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrainerClientsListActivity">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/clients_list_nav_view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:headerLayout="@layout/nav_header_clients_list"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/clients_list_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/client_list_elem_layout"
        android:layout_below="@id/clients_list_nav_view"
        />
</RelativeLayout>