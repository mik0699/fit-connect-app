<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountActivity"
    >

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/client_infos_nav_view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:headerLayout="@layout/nav_header"
        android:layout_alignParentTop="true"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/client_infos_nav_view"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="28sp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                />

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_username"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/baseline_account_circle_24"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/tv_age"
                android:text="EtÃ "
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_birth"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/et_age"
                android:textSize="20sp"
                android:gravity="center|right"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/et_age"
                android:text="18"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/et_birth"
                app:layout_constraintStart_toEndOf="@id/tv_age"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="20sp"
                android:gravity="center|left"
                />

            <TextView
                android:id="@+id/tv_weight"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:gravity="center|right"
                android:text="Peso"
                android:textSize="20sp"
                app:layout_constraintEnd_toStartOf="@id/et_weight"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_age"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/et_weight"
                android:text="70Kg"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/et_age"
                app:layout_constraintStart_toEndOf="@id/tv_weight"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="20sp"
                android:gravity="center|left"
                />

            <TextView
                android:id="@+id/tv_birth"
                android:text="Data di nascita"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/profile_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/et_birth"
                android:textSize="20sp"
                android:gravity="center|right"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/et_birth"
                android:text="18/08/1999"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/profile_image"
                app:layout_constraintStart_toEndOf="@id/tv_birth"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center|left"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/tv_height"
                android:text="Altezza"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_weight"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/et_height"
                android:textSize="20sp"
                android:gravity="center|right"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/et_height"
                android:text="178cm"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/et_weight"
                app:layout_constraintStart_toEndOf="@id/tv_height"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="20sp"
                android:gravity="center|left"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</RelativeLayout>