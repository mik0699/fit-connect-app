<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_ex_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Esercizio 1"
        android:textSize="32sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="10dp"
        />

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_ex_name"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:text="Set"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:text="Reps"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:text="Peso"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:text="Riposo"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textStyle="bold"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_2"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_1"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:id="@+id/tv_set"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:text="3"
            android:textSize="18sp"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/tv_reps"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:text="5"
            android:textSize="18sp"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/tv_weight"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:text="10kg"
            android:textSize="18sp"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/tv_rest"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:text="1:00"
            android:textSize="18sp"
            android:textAlignment="center"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_3"
        android:layout_below="@id/ll_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <Button
            android:id="@+id/btn_notes"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="60dp"
            android:text="Note e difficoltÃ \npercepita"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:backgroundTint="@color/secondary_btn"
            android:layout_marginEnd="20dp"
            />

        <Button
            android:id="@+id/btn_modify"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="60dp"
            android:text="Modifica\nesercizio"
            android:textColor="@color/black"
            android:backgroundTint="@color/secondary_btn"
            android:layout_marginEnd="20dp"
            />

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="2sp"
        android:background="@color/header"
        android:layout_below="@id/ll_3"
        android:layout_marginTop="10dp"
        />

</RelativeLayout>